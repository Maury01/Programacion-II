<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".actNuevoProducto">


    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="62dp"
        android:layout_height="42dp"
        android:background="@color/teal_200"
        app:backgroundTint="@color/teal_200"
        app:icon="@drawable/abc_vector_test"
        app:iconTint="#020202" />

    <TextView
        android:id="@+id/txtNuevaPelicula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/TituloRegPeli"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/btnRegresar"
        tools:layout_editor_absoluteY="6dp" />

    <ImageButton
        android:id="@+id/imgFoto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="104dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNuevaPelicula" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="354dp"
        app:layout_constraintTop_toBottomOf="@+id/imgFoto"
        tools:layout_editor_absoluteX="-1dp">


    </ScrollView>

    <EditText
        android:id="@+id/txtCodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/CodPeli"
        app:layout_constraintTop_toBottomOf="@+id/imgFoto"
        tools:layout_editor_absoluteX="0dp" />
    <EditText
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/TituloPeli"
        app:layout_constraintTop_toBottomOf="@+id/txtCodigo"
        tools:layout_editor_absoluteX="0dp" />
    <EditText
        android:id="@+id/txtSinopsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/Sinopsispeli"
        app:layout_constraintTop_toBottomOf="@+id/txtTitulo"
        tools:layout_editor_absoluteX="0dp" />
    <EditText
        android:id="@+id/txtDuracion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/Duracionpeli"
        app:layout_constraintTop_toBottomOf="@+id/txtSinopsis"
        tools:layout_editor_absoluteX="0dp" />
    <EditText
        android:id="@+id/txtPrecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/PrecioPeli"
        app:layout_constraintTop_toBottomOf="@+id/txtDuracion"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="136dp"
        android:text="@string/BotonGuardar"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPrecio" />

</androidx.constraintlayout.widget.ConstraintLayout>