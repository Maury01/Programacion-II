<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".actNuevoProducto">


    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="62dp"
        android:layout_height="42dp"
        android:background="@color/teal_200"
        app:backgroundTint="@color/teal_200"
        app:icon="@drawable/abc_vector_test"
        app:iconTint="#020202" />

    <TextView
        android:id="@+id/txtNuevaPelicula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/TituloRegPeli"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/btnRegresar"
        tools:layout_editor_absoluteY="6dp" />

    <ImageButton
        android:id="@+id/imgFoto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="104dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNuevaPelicula" />

    <ScrollView
        android:id="@+id/scvScroll"
        android:layout_width="match_parent"
        android:layout_height="354dp"
        app:layout_constraintTop_toBottomOf="@+id/imgFoto"
        tools:layout_editor_absoluteX="-1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtCodigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="@string/CodPeli" />

            <EditText
                android:id="@+id/txtTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="@string/TituloPeli" />

            <EditText
                android:id="@+id/txtSinopsis"
                android:layout_width="match_parent"
                android:layout_height="218dp"
                android:layout_marginTop="20dp"
                android:hint="@string/Sinopsispeli"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/txtDuracion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="@string/Duracionpeli" />

            <EditText
                android:id="@+id/txtPrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="@string/PrecioPeli"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/lblVideo"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:hint="@string/lblVideo"
                android:textSize="20dp"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="75dp"
                    android:hint="@string/PrecioPeli"
                    android:text="@string/ElegirTrailer" />

                <Button
                    android:id="@+id/VerTrailer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/VerTrailer" />
            </LinearLayout>

            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="140dp"
                android:text="@string/BotonGuardar"
                android:textAlignment="center"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>