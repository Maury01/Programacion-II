<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnAtrasLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnAtras"
            app:backgroundTint="#E63946"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lytTitulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="128dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtNombreAppLogin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:text="@string/NombreApp"
            android:textColor="#1D3557"
            android:textSize="36dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTituloLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TituloLogin"
            android:textColor="#1D3557"
            android:textSize="25dp"
            android:layout_marginTop="25dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lytTextoBotonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lytTitulos">

        <EditText
            android:id="@+id/txtUsurioLogin"
            android:layout_width="343dp"
            android:layout_height="52dp"
            android:hint="@string/txtCorreoLogin"
            android:textColorHint="#1D3557"
            android:textColor="#1D3557"
            android:textSize="15dp"
            android:background="@drawable/stylo_bordes_editext"/>

        <EditText
            android:id="@+id/txtPasswordLogin"
            android:layout_width="343dp"
            android:layout_height="52dp"
            android:layout_marginTop="25dp"
            android:hint="@string/txtpassLogin"
            android:textColorHint="#1D3557"
            android:inputType="textPassword"
            android:textColor="#1D3557"
            android:textSize="15dp"
            android:background="@drawable/stylo_bordes_editext"/>

        <Button
            android:id="@+id/btnIniciarSesionLogin"
            android:layout_width="243dp"
            android:layout_height="52dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="#457B9D"
            android:text="@string/TituloLogin"/>

        <Button
            android:id="@+id/btnRegistraseLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtRegistraseLogin"
            android:textSize="13dp"
            android:textColor="#E63946"
            app:backgroundTint="#00FFFFFF"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="105dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>