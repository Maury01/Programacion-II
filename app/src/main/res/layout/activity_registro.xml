<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnAtrasReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnAtras"
            app:backgroundTint="#E63946"/>
    </RelativeLayout>




    <LinearLayout
        android:id="@+id/lytTitulosReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="128dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtNombreAppReg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:text="@string/NombreApp"
            android:textColor="#1D3557"
            android:textSize="36dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTituloReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblRegistraseReg"
            android:textColor="#1D3557"
            android:textSize="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrolreg"
        android:layout_width="346dp"
        android:layout_height="445dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lytTitulosReg">

        <LinearLayout
            android:id="@+id/lytTextoBotonReg"
            android:layout_width="344dp"
            android:layout_height="wrap_content"

            android:layout_marginEnd="32dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lytTitulosReg">

            <EditText
                android:id="@+id/txtNombreReg"
                android:layout_width="343dp"
                android:layout_height="52dp"
                android:background="@drawable/stylo_bordes_editext"
                android:hint="@string/txtNombreReg"
                android:textColor="#1D3557"
                android:textColorHint="#1D3557"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/txtCorreoReg"
                android:layout_width="343dp"
                android:layout_height="52dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/stylo_bordes_editext"
                android:hint="@string/txtCorreoReg"
                android:textColor="#1D3557"
                android:textColorHint="#1D3557"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txtUsuarioNoValiable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtUserinvalidoReg"
                android:textSize="15dp"
                android:textColor="#E63946"
                android:layout_marginTop="10dp"
                android:visibility="invisible"/>

            <EditText
                android:id="@+id/txtUsuarioReg"
                android:layout_width="343dp"
                android:layout_height="52dp"
                android:background="@drawable/stylo_bordes_editext"
                android:hint="@string/txtUserPassReg"
                android:textColor="#1D3557"
                android:textColorHint="#1D3557"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/txtPasswordReg"
                android:layout_width="343dp"
                android:layout_height="52dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/stylo_bordes_editext"
                android:hint="@string/txtpassLogin"
                android:inputType="textPassword"
                android:textColor="#1D3557"
                android:textColorHint="#1D3557"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/txtConfirmPasswordReg"
                android:layout_width="343dp"
                android:layout_height="52dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/stylo_bordes_editext"
                android:hint="@string/txtCinfirmPassReg"
                android:inputType="textPassword"
                android:textColor="#1D3557"
                android:textColorHint="#1D3557"
                android:textSize="15dp" />

            <Button
            android:id="@+id/btnRegistrarse"
            android:layout_width="243dp"
            android:layout_height="52dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="#457B9D"
            android:text="@string/txtRegistraseLogin" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>