<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Publicacion">

    <Button
        android:id="@+id/btnAtrasPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnAtras"
        app:backgroundTint="#E63946"/>

    <TextView
        android:id="@+id/lblTituloPost"
        android:layout_width="292dp"
        android:layout_height="98dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="60dp"
        android:text="@string/publicacionUser"
        android:textAlignment="center"
        android:textColor="#1D3557"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/lytLineaPost"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/stylo_lineas"
        app:layout_constraintTop_toBottomOf="@+id/lblTituloPost"
        android:layout_marginTop="10dp"/>

    <ImageButton
        android:id="@+id/imgFotoOtherUser"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="104dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lytLineaPost" />

    <LinearLayout
        android:id="@+id/lytInfoPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/imgFotoOtherUser"
        android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/lblDescripcionPost"
                android:layout_width="306dp"
                android:layout_height="50dp"
                android:hint="@string/DescripcionEditorPost"
                android:textSize="18dp"
                android:inputType="textMultiLine"
                android:background="@drawable/stylo_bordes2_editext"
                android:layout_marginLeft="50dp"/>

            <TextView
                android:id="@+id/lblCategoriaOtherPost"
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:hint="@string/CategoriaEditorPost"
                android:textSize="18dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10sp"
                android:backgroundTint="#A8DADC"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lytComentarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/lytInfoPost"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/lblComentarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Comantarios"
            android:textSize="14dp"/>

        <ScrollView
            android:id="@+id/sclCajaComentarios"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ListView
                android:id="@+id/ltsComentarios"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
        </ScrollView>

        <LinearLayout
            android:id="@+id/lytComentar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/txtComentar"
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:hint="@string/Comentar"
                android:textSize="14dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10sp"
                android:backgroundTint="#A8DADC"/>
            <Button
                android:id="@+id/btnEnviarComentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#A8DADC"
                android:text="@string/Enviar"
                android:textColor="#445966"
                android:textSize="15dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>