<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MiPerfil">
    <Button
        android:id="@+id/btnAtrasLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnAtras"
        app:backgroundTint="#E63946"/>

    <TextView
        android:id="@+id/lblUsuarioPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="144dp"
        android:text="@string/Usuarioname"
        android:textColor="#1D3557"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/lytBotonesMicuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="52dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblUsuarioPerfil">

        <Button
            android:id="@+id/btnEditPerfil"
            android:layout_width="138dp"
            android:layout_height="68dp"
            android:backgroundTint="#E63946"
            android:text="@string/btnPerfil"
            android:textSize="19dp" />

        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="138dp"
            android:layout_height="68dp"
            android:layout_marginLeft="25dp"
            android:backgroundTint="#E63946"
            android:text="@string/btncerrarsesion"
            android:textSize="19dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lytLinea4"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/lytBotonesMicuenta"
        tools:layout_editor_absoluteX="0dp"
        android:background="@drawable/stylo_lineas"/>

    <TextView
        android:id="@+id/lblMisPublicaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="116dp"
        android:text="@string/mispublicaiones"
        android:textColor="#1D3557"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lytLinea4" />

    <RelativeLayout
        android:id="@+id/lytGridViewMiCuenta"
        android:layout_width="match_parent"
        android:layout_height="353dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/lblMisPublicaciones">

        <ScrollView
            android:id="@+id/sclImagenesMiCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridView
                android:id="@+id/grvMisImagenes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="2" />
        </ScrollView>

    </RelativeLayout>

    <Button
        android:id="@+id/btnNuevaPublicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="68dp"
        android:backgroundTint="#A8DADC"
        android:text="@string/nuevoPost"
        android:textColor="#445966"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lytGridViewMiCuenta" />

</androidx.constraintlayout.widget.ConstraintLayout>