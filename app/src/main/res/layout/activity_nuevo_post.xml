<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NuevoPost">

    <TextView
        android:id="@+id/lblTituloNuevoPost"
        android:layout_width="292dp"
        android:layout_height="98dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="60dp"
        android:text="@string/EditorPost"
        android:textAlignment="center"
        android:textColor="#1D3557"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/lytLineaEditor"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/stylo_lineas"
        app:layout_constraintTop_toBottomOf="@+id/lblTituloNuevoPost"
        android:layout_marginTop="10dp"/>

    <ImageButton
        android:id="@+id/imgFoto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="104dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lytLineaEditor" />

    <LinearLayout
        android:id="@+id/lytInfoPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/imgFoto"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/txtDescripcionEditor"
            android:layout_width="306dp"
            android:layout_height="120dp"
            android:hint="@string/DescripcionEditorPost"
            android:textSize="18dp"
            android:inputType="textMultiLine"
            android:background="@drawable/stylo_bordes2_editext"
            android:layout_marginLeft="50dp"/>

        <EditText
            android:id="@+id/txtCategoriaPost"
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:hint="@string/CategoriaEditorPost"
            android:textSize="18dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10sp"
            android:backgroundTint="#A8DADC"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnPublicar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="128dp"
        android:backgroundTint="#A8DADC"
        android:text="@string/publicarEditorPost"
        android:textColor="#445966"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lytInfoPost" />
</androidx.constraintlayout.widget.ConstraintLayout>